@model School.Models.Father_signup_Model

<div class="modal fade" id="myModal2" role="dialog">
    <div class="modal-dialog">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <b>Please Enter Father UserName</b>
                    </h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("signup", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <label for="user" class="label">Father UserName</label>
                    @Html.TextBoxFor(a => a.username, new { @class = " input-group form-control", @style = "margin-left: 130px;" , placeholder = "Father UserName", id = "user", type = "text" })

                    <div style="text-align:center">@Html.ValidationMessageFor(a => a.username, "", new { @class = "label label-danger" })</div>
                    <div class="group" style="text-align:center; padding:15px">
                        <input type="submit" class="btn btn-primary" value="Sign Up">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

